  <div style="text-align:Right;" class="container">
    <a href="/logout" class="btn btn-light btn-large">
    Logout
  </a>
     </header>
     <hr>
   </div>
   <div style="background-color:#1E90FF">
    <div style="background-color:#606060" class="ui container">

    <h1 style="text-align:center;color:rgb(18, 185, 165);font-size:32 px" class="ui header">LiveConnect</h1>
<body>
  <div class="ui container">
    <h1 class="ui header"style="color:rgb(244, 249, 249);font-size:25px">Welcome to a place where you can share emotions, business and knowledge worldwide.</h1>



    <hr>
    <div class="ui two column stackable grid">
      <div class="ui ten wide column">
        <div class="ui segment">

          <!-- Chat Room Form -->
          <div style="background-color:#A9A9A9" class="ui form">
            <div style="text-align:center;" class="fields">
              <div style="text-align:center;" class="field">
                <label>User Name</label>
                <input type="text" placeholder="Enter user name" id="username" name="username">
              </div>
              <div class="field">
                <label>Room</label>
                <input type="text" placeholder="Enter room name" id="roomName" name="roomName">
              </div>
            </div>
            <br>
            <div class="ui buttons">
              <div id="create-btn" class="ui submit blue button">Create Room</div>
              <div class="or"></div>
              <div id="join-btn" class="ui submit blue button">Join Room</div>
            </div>
          </div>

          <!-- Chat Room Messages -->
          <div id="chat"></div>
        </div>
      </div>

      <!-- Local Camera -->
      <div class="ui six wide column">
        <img  id="local-image" class="ui large image" src="images/image.png">
        <video  id="local-video" class="ui large image" width="100" heigth="100"  autoplay></video>
        <h4 class="ui center aligned header" style="margin:0;">
          Local Camera
        </h4>
      </div>
    </div>

    <!-- Remote Cameras -->
    <h3 class="ui center aligned header">Remote Cameras</h3>
    <div id="remote-videos" class="ui stackable grid">
      <div class="four wide column">
        <img class="ui centered medium image" src="images/image.png">
      </div>
      <div class="four wide column">
        <img class="ui centered medium image" src="images/image.png">
      </div>
      <div class="four wide column">
        <img class="ui centered medium image" src="images/image.png">
      </div>
      <div class="four wide column">
        <img class="ui centered medium image" src="images/image.png">
      </div>
    </div>
  </div>

  <!-- TEMPLATES -->
  <!-- Remote Video Template -->
  <script id="remote-video-template" width="100" heigth="100" type="text/x-handlebars-template">
    <div id="{{ id }}" class="four wide column">
      <img class="ui centered medium image" src="images/image.png">
    </div>
  </script>

  <!-- Chat Content Template -->
  <script id="chat-content-template" type="text/x-handlebars-template">
   {{#each messages}}
    <div class="event">
      <div class="label">
        <i class="icon black user"></i>
      </div>
      <div class="content">
        <div class="summary">
          <a href="#"> {{ username }}</a> posted on
          <div class="date">
            {{ postedOn }}
          </div>
        </div>
        <div class="extra text">
          {{ message }}
        </div>
      </div>
    </div>
  {{/each}}
  </script>

  <!-- Chat Template -->
  <script id="chat-template" type="text/x-handlebars-template">
    <h3 class="ui orange header">Room ID -> <strong>{{ room }}</strong></h3>
    <hr>
    <div id="chat-content" class="ui feed"> </div>
    <hr>
    <div class="ui form">
      <div class="ui field">
        <label>Post Message</label>
        <textarea id="post-message" name="post-message" rows="1"></textarea>
      </div>
      <div id="post-btn" class="ui primary submit button">Send</div>
      <a id="hangUp" href="/profile">leave</a>
    </div>
  </script>

  <!-- Scripts -->
  <script src="scripts/jquery/dist/jquery.min.js"></script>
  <script src="scripts/semantic-ui-css/semantic.min.js"></script>
  <script src="scripts/handlebars/dist/handlebars.min.js "></script>
  <script src="scripts/simplewebrtc/out/simplewebrtc-with-adapter.bundle.js"></script>
  <script src="js/app.js"></script>

</body>
</html>
